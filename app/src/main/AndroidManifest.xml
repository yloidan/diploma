<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diploma.ylois.dummyapp" >

    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
    <uses-permission android:name="com.android.browser.permission.WRITE_HISTORY_BOOKMARKS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/android"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.diploma.ylois.dummyapp.MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.DisplayMessageActivity"
            android:label="@string/title_activity_display_message" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.SentimentActivity"
            android:label="@string/title_activity_sentiment" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.CategoryActivity"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.AboutActivity"
            android:label="@string/title_activity_about" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diploma.ylois.dummyapp.MyActivity" />
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.DashboardActivity"
            android:label="@string/title_activity_dashboard" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.diploma.ylois.dummyapp.MyActivity" />
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.DashboardActivityToday"
            android:label="@string/title_activity_dashboard_activity_today" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.SentimentActivityToday"
            android:label="@string/title_activity_sentiment_activity_today" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.CategoryActivityToday"
            android:label="@string/title_activity_category_activity_today" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.DisplayToday"
            android:label="@string/title_activity_display_today" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.DashboardActivityWeek"
            android:label="@string/title_activity_dashboard_activity_week" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.CategoryActivityWeek"
            android:label="@string/title_activity_category_activity_week" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.SentimentActivityWeek"
            android:label="@string/title_activity_sentiment_activity_week" >
        </activity>
        <activity
            android:name="com.diploma.ylois.dummyapp.DisplayWeek"
            android:label="@string/title_activity_display_week" >
        </activity>
    </application>

</manifest>
